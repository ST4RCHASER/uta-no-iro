// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Room {
    id        String      @id @default(cuid())
    code     String
    config    String? 
    states    String?
    queues    SongQueue[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?

    @@index([code])
    @@unique([code, id])
}

model SongQueue {
    id        Int      @id @default(autoincrement())
    order     Int
    roomId    String
    room      Room     @relation(fields: [roomId], references: [id])
    type      String
    data      String
    createdAt DateTime @default(now())
    playedAt  DateTime?
    deletedAt DateTime?
}

model KV {
    id        String      @id @default(cuid())
    key       String    @unique
    value     String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([key])
}